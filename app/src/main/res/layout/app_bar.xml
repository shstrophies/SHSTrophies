<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1278dp"
    android:layout_height="120dp"
    android:background="#f9f9f9"
    app:popupTheme="@style/CustomPopupStyle"
    android:id="@+id/app_bar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1287dp"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toTopOf="@+id/sport_recycleview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/shs_logo" />

        <TextView
            android:id="@+id/sport_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_bold"
            android:text="@string/tap_a_sport_or_search"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>