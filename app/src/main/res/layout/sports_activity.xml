<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.sports.SportsActivity">

        <!--
        <TextView
            android:id="@+id/textView"
            android:layout_width="382dp"
            android:layout_height="49dp"
            android:text="@string/saratoga_high_school_trophies"
            android:textSize="25sp"
            android:textStyle="bold" />
            -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sport_recycleview"
                    android:layout_width="fill_parent"
                    android:layout_height="495dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="352dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clipToPadding="false"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                </androidx.recyclerview.widget.RecyclerView>

                <View
                    android:id="@+id/view"
                    android:layout_width="1278dp"
                    android:layout_height="115dp"
                    android:background="#fff"
                    app:layout_constraintBottom_toTopOf="@+id/sport_recycleview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.02" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="39dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/sport_recycleview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.054"
                    app:srcCompat="@drawable/shs_logo" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/montserrat_bold"
                    android:text="Tap a sport or search"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <com.mancj.materialsearchbar.MaterialSearchBar
                    android:id="@+id/sports_search"
                    style="@style/MaterialSearchBarLight"
                    android:layout_width="1100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="8dp"


                    app:mt_maxSuggestionsCount="10"
                    app:mt_placeholder=""
                    app:mt_speechMode="false"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:paddingTop="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                </com.mancj.materialsearchbar.MaterialSearchBar>
        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>
