<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_trophy_id"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="238dp"
        android:layout_height="393dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        >


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="238dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/my_image_view"
            app:srcCompat="@android:color/holo_orange_dark"
            tools:layout_editor_absoluteX="0dp"
            android:clickable="true"
            android:focusable="true"

            />

        <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="238dp"
            android:layout_height="337dp"
            android:layout_marginBottom="4dp"
            android:background="#2d2d2d"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/txtTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"


            />


        <!--    we need to find some conditional to be like, for example'if theres only 10 characters, make font size 50 but if theres more than 10, font size = 30 -->

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="203dp"
            android:layout_height="34dp"
            android:fontFamily="@font/montserrat_bold"
            android:padding="1dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.955" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>