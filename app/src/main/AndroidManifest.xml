<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shs.trophiesapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        tools:replace="android:label"
        android:label="@string/saratoga_high_school_trophies"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SetupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shs.trophiesapp.TrophiesActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            >

        </activity>
        <activity
            android:name="com.shs.trophiesapp.SportsActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            >
        </activity>
        <activity
            android:name="com.shs.trophiesapp.SportsWithTrophiesActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            >
        </activity>

        <activity
            android:name="com.shs.trophiesapp.TrophyDetailsActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            >
        </activity>
        <activity
            android:name="com.shs.trophiesapp.TrophyWithAwardsActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            >
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>


</manifest>